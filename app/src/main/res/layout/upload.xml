<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent">

       <LinearLayout android:layout_width="match_parent"
                     android:orientation="vertical"
                     android:layout_height="300dp">

           <ImageView android:layout_width="300dp"
                      android:layout_marginLeft="50dp"
                      android:id="@+id/showPhoto"
                      android:layout_height="180dp"/>

           <Button android:layout_width="100dp"
                   android:id="@+id/choosePhoto"
                   android:text="选择图片"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="130dp"
                   android:layout_height="50dp"/>
       </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="100dp">

            <Button android:layout_width="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/openDirectory"
                    android:text="选择视频"
                    android:layout_height="40dp"/>

            <TextView android:layout_width="200dp"
                      android:id="@+id/showVideo"
                      android:layout_marginLeft="20dp"
                      android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="15dp"
                      android:orientation="horizontal">

            <TextView android:layout_width="150dp"
                      android:text="输入视频名字"
                      android:textSize="25dp"
                      android:layout_height="match_parent"/>

            <EditText android:layout_width="200dp"
                      android:id="@+id/videonameinput"
                      android:layout_height="match_parent"/>
        </LinearLayout>



        <Button android:layout_width="80dp"
                android:id="@+id/upload"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"
                android:text="上传"
                android:layout_height="50dp"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>